{
  "name": "CYBS 4473 NIDS Project",
  "image": "mcr.microsoft.com/devcontainers/python:3.10-bullseye",

  // Installs libpcap, which Scapy needs
  "onCreateCommand": "sudo apt-get update && sudo apt-get install -y libpcap-dev",

  // Installs the Python libraries from requirements.txt
  "postCreateCommand": "pip install -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}